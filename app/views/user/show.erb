<h1>User Profile</h1>

Name: <%= @user.name %>
<br>
Email: <%= @user.email %>
<br>

<a href="/users/<%= @user.id %>/edit"><button>Edit profile</button></a>
<form action="/users/<%= @user.id %>" method="post">
	<input type="hidden" name="_method" value="delete">
	<input type="submit" value="Delete">
</form>
<br>

<a href="/questions/new"><button>Post Your Question Here</button></a>
<br><br>
<h1> Your Question List </h1>

<% @user.questions.each do |question| %>

	<a href="/questions/<%= question.id%>"><%= question.question_title %></a>
	<form action="/questions/<% question.id %>/upvote" method="POST">
		<input type="submit" value="upvote"></form>



	<br>
<% end %>

<a href="/users/logout"><button>Logout</button></a>
